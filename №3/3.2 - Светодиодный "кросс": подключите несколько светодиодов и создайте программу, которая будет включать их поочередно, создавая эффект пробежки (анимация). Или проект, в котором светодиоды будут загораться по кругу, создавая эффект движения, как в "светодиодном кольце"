//Исходный код:
const int numLEDs = 6; // количество светодиодов
int ledPins[numLEDs] = {22, 23, 24, 25, 26, 27}; // пины для светодиодов
void setup() {
  for (int i = 0; i < numLEDs; i++) {
    pinMode(ledPins[i], OUTPUT);
  }
}
void loop() {
  // Эффект "пробежки" вперед
  for (int i = 0; i < numLEDs; i++) {
    digitalWrite(ledPins[i], HIGH); // зажигаем текущий светодиод
    delay(150);                     // задержка
    digitalWrite(ledPins[i], LOW);  // гасим его
  }
  // Эффект "кольца" — движение по кругу
  for (int i = 0; i < numLEDs; i++) {
    digitalWrite(ledPins[i], HIGH); // зажигаем текущий
    int prev = (i - 1 + numLEDs) % numLEDs; 
    digitalWrite(ledPins[prev], LOW); // гасим предыдущий
    delay(150); // задержка
  }
}
