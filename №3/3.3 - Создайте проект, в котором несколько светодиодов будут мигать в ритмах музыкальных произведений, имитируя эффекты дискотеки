//Исходный код:
const int numLEDs = 6;
int ledPins[numLEDs] = {22, 23, 24, 25, 26, 27};
const int micPin = A0; // Аналоговый вход для микрофона
int threshold = 200; // Порог чувствительности, подбирается экспериментально
void setup() {
  for (int i = 0; i < numLEDs; i++) {
    pinMode(ledPins[i], OUTPUT);
  }
  Serial.begin(9600); // Для отладки уровня сигнала
}
void loop() {
  int sensorValue = analogRead(micPin);
  Serial.println(sensorValue); 
  if (sensorValue > threshold) {
    // В момент громкого звука зажигаем все светодиоды
    for (int i = 0; i < numLEDs; i++) {
      digitalWrite(ledPins[i], HIGH);
    }
  } else {
    // В тихие моменты светодиоды мигают по одному
    for (int i = 0; i < numLEDs; i++) {
      digitalWrite(ledPins[i], HIGH);
      delay(50);
      digitalWrite(ledPins[i], LOW);
    }
  }
  delay(10); 
}
