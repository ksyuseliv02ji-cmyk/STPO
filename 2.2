//Используя линейку светодиодов организовать двоичный счет до 15 с заданной частотой следования импульсов
//Исходный код:
//ч.4
const int ledPins[4] = {22, 23, 24, 25};
int delayTime = 500; 
void setup() {
  for (int i = 0; i < 4; i++) {
    pinMode(ledPins[i], OUTPUT);
  }
}
void loop() {
  for (int count = 0; count <= 15; count++) {
    for (int i = 0; i < 4; i++) {
      digitalWrite(ledPins[i], (count >> i) & 1);
    }
    delay(delayTime);
  }
}
